        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/textViewnumber"
        android:layout_width="113dp"
        android:layout_height="97dp"
        android:layout_x="144dp"
        android:layout_y="100dp"
