<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popupshape"
    android:orientation="vertical">


    <TextView
        android:id="@+id/exit"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:paddingLeft="20dp"
        android:text="Exit"
        android:clickable="true"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/how_to_play"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goldScore"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:fontFamily="@font/annie_use_your_telescope"
        android:paddingLeft="20dp"
        android:text="How to play"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextstage"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/how_to_play"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:paddingLeft="20dp"
        android:text="Next Stage"
        android:clickable="true"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nextstage"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:paddingLeft="20dp"
        android:text="Settings"
        android:clickable="true"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goldScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:text="~ Options ~"
        android:textColor="#911515"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/button6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/goldScore"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/menu_buttons"
        android:backgroundTint="#14DCD5"
        app:srcCompat="@drawable/help" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/nextstage"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/menu_buttons"
        android:backgroundTint="#FAE20A"
        app:srcCompat="@drawable/sett" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/how_to_play"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/menu_buttons"
        android:backgroundTint="#96E627"
        app:srcCompat="@drawable/next"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/settings"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/menu_buttons"
        android:backgroundTint="#F4621D"
        app:srcCompat="@drawable/home" />


</RelativeLayout>