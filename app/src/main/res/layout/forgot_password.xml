<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ForgotPassword">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:layout_x="175dp"
        android:layout_y="196dp"
        app:srcCompat="@drawable/icon1" />

    <Button
        android:id="@+id/senemail"
        android:layout_width="221dp"
        android:layout_height="34dp"
        android:layout_x="99dp"
        android:layout_y="431dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="sans-serif-black"
        android:text="Send Instructions"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/gotologin"
        android:layout_width="308dp"
        android:layout_height="34dp"
        android:layout_x="52dp"
        android:layout_y="661dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="sans-serif-black"
        android:text="Go back to Member Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="37dp"
        android:layout_height="22dp"
        android:layout_x="38dp"
        android:layout_y="359dp"
        app:srcCompat="@drawable/emailforgotpassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="301dp"
        android:layout_height="53dp"
        android:layout_x="60dp"
        android:layout_y="270dp"
        android:fontFamily="serif"
        android:text="Enter your Email Address below to recieve your password reset instructions."
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="146dp"
        android:layout_y="242dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Forgot Password ?"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_x="287dp"
        android:layout_y="289dp"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_x="43dp"
        android:layout_y="503dp"
        android:fontFamily="serif"
        android:textColor="#FF3D00" />

    <EditText
        android:id="@+id/emailforpassword"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_x="81dp"
        android:layout_y="345dp"
        android:fontFamily="sans-serif-condensed"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />


</AbsoluteLayout>